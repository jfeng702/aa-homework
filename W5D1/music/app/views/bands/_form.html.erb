<h1><%= action == :new ? "Adding a band" : "Edit band name" %></h1>

<% action_url = (action == :new) ?  bands_url : band_url(band) %>

<form action="<%= action_url %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <label for="name">Name</label>
  <input id="name" type="text" name="band[name]" value="<%= band.name %>">
  <br>
  <% submit_text = (band.persisted? ? 'Update' : 'Create') %>
  <input type="submit" value="<%= submit_text %>">
</form>
